<article class="post_article">
  <div id="<%= dom_id post %>">
    <div class="container">
      <div class="row">
        <div class="col-xl-8 col-lg-8 col-md-12">
          <div class="card">
            <h5 class="card-header"><%= post.user.email %></h5>
            <%= render 'posts/image_slider', post: post %>
            <div class="card-body">
              <p class="card-text"><%= post.body %></p>
            </div>
          </div>
        </div>
        <div class="col-xl-4 col-lg-4 col-md-hidden">
        </div>
      </div>
    </div>
  </div>
</article>
